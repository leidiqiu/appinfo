<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp">

    <ImageView
        android:id="@+id/appinfo_image"
        android:layout_width="48dp"
        android:layout_height="48dp" />

    <TextView
        android:id="@+id/appinfo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/appinfo_image"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@id/appinfo_image"
        android:text="应用名字"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/appinfo_signature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/appinfo_image"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@id/appinfo_image"
        android:singleLine="true"
        android:text="签名"
        android:textColor="#666666"
        android:textSize="11sp" />

</RelativeLayout>